{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "convex-implementation-guide"
  ],
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/utils/*": ["src/utils/*"],
      "@/features/*": ["src/features/*"],
      "@/components/*": ["src/components/*"],
      "@/routes/*": ["src/routes/*"],
      "@/convex/*": ["convex/*"],
      "@/generated/*": ["convex/_generated/*"],
      "@/shared/*": ["convex/shared/*"],
      "@/schema/*": ["convex/schema/*"],
      "@/config/*": ["convex/config/*"],
      "@/lib/*": ["src/lib/*"]
    },
    "noEmit": true
  }
}
