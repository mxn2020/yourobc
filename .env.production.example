# ==============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==============================================================================
# These are the production environment variables for Vercel deployment.
# Set these in Vercel Dashboard → Settings → Environment Variables
# ==============================================================================

# ------------------------------------------------------------------------------
# CONVEX DATABASE (PRODUCTION)
# ------------------------------------------------------------------------------
CONVEX_DEPLOYMENT=your-convex-deployment-id|your-convex-deployment-key
CONVEX_URL=your-convex-database-url
VITE_CONVEX_URL=your-convex-database-url

# ------------------------------------------------------------------------------
# BETTER AUTH CONFIGURATION (PRODUCTION)
# ------------------------------------------------------------------------------
# Generate a new secret with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-better-auth-secret
BETTER_AUTH_URL=your-production-app-url
VITE_BETTER_AUTH_URL=your-production-app-url

# ------------------------------------------------------------------------------
# DATABASE (NEON POSTGRESQL)
# ------------------------------------------------------------------------------
DATABASE_URL=your-neon-postgresql-connection-string

# ------------------------------------------------------------------------------
# OAUTH PROVIDERS (OPTIONAL)
# ------------------------------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# ------------------------------------------------------------------------------
# AUTUMN PAYMENTS (OPTIONAL)
# ------------------------------------------------------------------------------
AUTUMN_SECRET_KEY=your-autumn-secret-key
AUTUMN_PROJECT_ID=geenius-autumn-project-id

# ------------------------------------------------------------------------------
# STRIPE (OPTIONAL)
# ------------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_CONNECT_CLIENT_ID=ca_your-connect-client-id-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here
STRIPE_APPLICATION_FEE_PERCENT=5

# ------------------------------------------------------------------------------
# AI GATEWAY (OPTIONAL)
# ------------------------------------------------------------------------------
AI_GATEWAY_API_KEY=

# ------------------------------------------------------------------------------
# FLIGHTSTATS API (OPTIONAL)
# ------------------------------------------------------------------------------
FLIGHTSTATS_APP_ID=
FLIGHTSTATS_APP_KEY=
FLIGHTSTATS_API_URL=https://api.flightstats.com/flex
