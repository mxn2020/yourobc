# ==============================================================================
# 7. APP LOADING BEHAVIOR
# ==============================================================================
# Control how the application shows loading states during initialization.

# Enable root-level loading spinner (default: false)
# When true: Shows a global loading spinner during Convex auth initialization
# When false: Uses route-level loading spinners for better granularity
VITE_ENABLE_ROOT_LOADING_SPINNER=false

# ==============================================================================
# 8. BLOG
# ==============================================================================
# Blog/content management system with SEO and social sharing.

# Feature toggle (default: true)
VITE_ENABLE_BLOG=true

# Blog configuration
VITE_SITE_URL=http://localhost:3000        # Required: Base site URL for SEO
VITE_PRIMARY_BLOG_PROVIDER=internal        # Blog provider: internal | contentful | sanity

# SEO defaults
VITE_BLOG_DEFAULT_AUTHOR=Your Name         # Default blog post author
VITE_BLOG_POSTS_PER_PAGE=10                # Posts per page (default: 10)

# ==============================================================================
# 9. INTERNATIONALIZATION (i18n)
# ==============================================================================
# Multi-language support with automatic locale detection and SEO optimization.

# Feature toggle (default: true)
# Set to false to disable i18n completely and use single language
VITE_ENABLE_I18N=true

# Default locale for the application
# Options: en | es | fr | de | zh
VITE_I18N_DEFAULT_LOCALE=en

# Enabled locales (comma-separated)
# Only these locales will be available in the language switcher
# If not specified, all supported locales are enabled
VITE_I18N_ENABLED_LOCALES=en,es,fr,de,zh

# Fallback locale if translation is missing
# Defaults to default locale if not specified
VITE_I18N_FALLBACK_LOCALE=en


# Locale detection and persistence
VITE_I18N_DETECT_BROWSER_LOCALE=true       # Auto-detect user browser language (default: true)
VITE_I18N_PERSIST_LOCALE=true              # Save locale preference in localStorage (default: true)

# UI configuration
VITE_I18N_SHOW_LANGUAGE_SWITCHER=true      # Show language switcher in navigation (default: true)

# Performance and debugging
VITE_I18N_CACHE_TRANSLATIONS=true          # Cache translations in memory (default: true)
VITE_I18N_SHOW_MISSING_WARNINGS=true       # Show console warnings for missing translations (default: true)

# ==============================================================================
# 9. PUBLIC ID GENERATION
# ==============================================================================
# Configure the strategy for generating public-facing IDs.
# These IDs are used for external APIs, shareable URLs, and integrations.

# Public ID Generation Strategy
# Options: uuid | nanoid | stripe | ulid | short | readable
# - uuid: UUID-based (default, 12 chars without hyphens)
# - nanoid: URL-safe alphanumeric (configurable length)
# - stripe: Stripe-style, no ambiguous chars (configurable length)
# - ulid: Timestamp-sortable (26 chars)
# - short: Short IDs (configurable length, 8 default)
# - readable: Docker-style adjective_noun (e.g., 'admiring_galileo')
PUBLIC_ID_STRATEGY=uuid

